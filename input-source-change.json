{
  "title": "F7/F8/F9 input source change",
  "rules": [
    {
      "description": "Press F7/F8/F9 to select English/Chinese/Japanese input source.",
      "manipulators": [
        {
          "type": "basic",
          "parameters": {
            "basic.to_delayed_action_delay_milliseconds": 200
          },
          "from": {
            "key_code": "f7"
          },
          "to": [
            {
              "select_input_source": {
                "language": "ja"
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "key_code": "spacebar",
                "modifiers": ["left_control", "left_option"]
              }
            ]
          }
        },
        {
          "type": "basic",
          "parameters": {
            "basic.to_delayed_action_delay_milliseconds": 200
          },
          "from": {
            "key_code": "f8"
          },
          "to": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "key_code": "spacebar",
                "modifiers": ["left_control", "left_option"]
              }
            ]
          }
        },
        {
          "type": "basic",
          "parameters": {
            "basic.to_delayed_action_delay_milliseconds": 200
          },
          "from": {
            "key_code": "f9"
          },
          "to": [
            {
              "select_input_source": {
                "language": "zh-Hant"
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "key_code": "spacebar",
                "modifiers": ["left_control", "left_option"]
              }
            ]
          }
        }
      ]
    }
  ]
}
